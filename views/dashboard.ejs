<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center mb-3">
        <div class="btn-group" role="group">
            <button id="scrapeBtn" class="btn btn-warning me-2">⚙️ Run Scraper Now</button>
            <a href="/add" class="btn btn-success">➕ Add New Application</a>
        </div>
    </div>
    
    <div class="col-12">
        <h2 class="h5">Progress Summary: <%= jobCount %> Total Applications</h2>
    </div>

    <% 
        const statusConfig = {
            'New': 'bg-primary', 'Applied': 'bg-info', 
            'Interview Scheduled': 'bg-success', 'Rejected': 'bg-danger', 
            'Offer': 'bg-success border border-white'
        };
    %>
    <% Object.keys(statusCounts).forEach(status => { %>
        <div class="col-md-2 col-sm-6 mb-3">
            <div class="card <%= statusConfig[status] %> text-white shadow-sm">
                <div class="card-body p-3">
                    <h6 class="card-title text-uppercase fw-light"><%= status %></h6>
                    <h2 class="card-text fw-bold"><%= statusCounts[status] %></h2>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<div class="row">
    <div class="col-12">
        <h2 class="mt-4">Active Applications</h2>
        
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Company</th>
                    <th>Location</th>
                    <th style="width: 10%;">Status</th>
                    <th>Profile Status</th>
                    <th>Application URL</th>
                    <th style="width: 8%;">Details</th>
                </tr>
            </thead>
            <tbody>
                <% jobs.forEach(job => { %>
                    <tr>
                        <td><%= job.title %></td>
                        <td><%= job.company %></td>
                        <td><%= job.location %></td>
                        
                        <td>
                            <% 
                                let statusClass = 'badge ';
                                if (job.status === 'Applied') statusClass += 'bg-info';
                                else if (job.status === 'Interview Scheduled') statusClass += 'bg-success';
                                else if (job.status === 'Rejected') statusClass += 'bg-danger';
                                else if (job.status === 'Offer') statusClass += 'bg-warning text-dark';
                                else statusClass += 'bg-secondary';
                            %>
                            <span class="<%= statusClass %>"><%= job.status %></span>
                        </td>

                        <td>
                            <% if (job.cv_created) { %><span class="badge bg-primary me-1">CV Created</span><% } %>
                            <% if (job.cover_letter_created) { %><span class="badge bg-primary">CL Created</span><% } %>
                        </td>

                        <td>
                            <% if (job.application_url) { %>
                                <a href="<%= job.application_url %>" target="_blank" class="btn btn-sm btn-outline-primary" title="View Job Ad">
                                    Open Ad
                                </a>
                            <% } else { %>
                                N/A
                            <% } %>
                        </td>
                        
                        <td>
                            <a href="/details/<%= job.id %>" class="btn btn-sm btn-outline-dark">
                                Details
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    </div>
</div>

<% jobs.forEach(job => { %>
    <div class="modal fade" id="notesModal<%= job.id %>" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Notes for <%= job.title %> at <%= job.company %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p><%= job.notes || 'No notes available.' %></p>
            </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
<% }) %>


<script>
    document.getElementById('scrapeBtn').addEventListener('click', async () => {
        const btn = document.getElementById('scrapeBtn');
        const statusEl = document.getElementById('scrapeStatus');
        
        btn.disabled = true;
        btn.innerHTML = '⚙️ Running... Please wait (check console)';
        statusEl.innerHTML = 'Scraper started. Jobs will appear in a moment.';

        try {
            const response = await fetch('/api/scrape', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            if (response.ok) {
                // Wait a few seconds for DB insertion to complete before reloading
                setTimeout(() => {
                    window.location.reload(); 
                }, 3000); 
            } else {
                statusEl.innerHTML = 'Error triggering scrape.';
                btn.disabled = false;
                btn.innerHTML = '⚙️ Run Scraper Now';
            }
        } catch (error) {
            console.error('Fetch error:', error);
            statusEl.innerHTML = 'Network error occurred.';
            btn.disabled = false;
            btn.innerHTML = '⚙️ Run Scraper Now';
        }
    });
</script>