<div class="container mt-4">
    <div class="row">
        <div class="col-md-3 text-center">
            
            <h3 class="mt-3"><%= profile.full_name %></h3>
            <p class="text-muted"><%= profile.job_title %></p>
            <hr>
            
            <form action="/profile/create-cv" method="POST">
                <button type="submit" class="btn btn-success w-100 mb-3">ðŸ“„ Create Base CV Template</button>
            </form>

            <% if (typeof profile.skills === 'string') { profile.skills = JSON.parse(profile.skills); } %>
        </div>
        
        <div class="col-md-9">
            <h1 class="mb-4">Profile Details (CV Data)</h1>
            
            <% if (req.query.saved) { %>
                <div class="alert alert-success">Profile saved successfully!</div>
            <% } %>
            <% if (req.query.cv_created) { %>
                <div class="alert alert-info">Base CV template created/updated in `documents/base_template_cv.md`!</div>
            <% } %>

            <form action="/profile" method="POST">
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="full_name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="full_name" name="full_name" value="<%= profile.full_name %>" required>
                    </div>
                    <div class="col-md-6">
                        <label for="job_title" class="form-label">Current Job Title</label>
                        <input type="text" class="form-control" id="job_title" name="job_title" value="<%= profile.job_title %>">
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="contact_email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="contact_email" name="contact_email" value="<%= profile.contact_email %>">
                    </div>
                    <div class="col-md-4">
                        <label for="phone" class="form-label">Phone</label>
                        <input type="text" class="form-control" id="phone" name="phone" value="<%= profile.phone %>">
                    </div>
                    <div class="col-md-4">
                        <label for="linkedin_url" class="form-label">LinkedIn URL</label>
                        <input type="url" class="form-control" id="linkedin_url" name="linkedin_url" value="<%= profile.linkedin_url %>">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="summary" class="form-label">Professional Summary</label>
                    <textarea class="form-control" id="summary" name="summary" rows="4"><%= profile.summary %></textarea>
                </div>
                
                <div class="mb-4">
                    <label for="skills" class="form-label">Skills (Comma Separated)</label>
                    <input type="text" class="form-control" id="skills" name="skills" value="<%= profile.skills.join(', ') %>" placeholder="e.g., Node.js, Sequelize, Gemini API">
                    <small class="text-muted">For detailed sections like Experience/Education, you would need complex JSON or relational fields.</small>
                </div>

                <button type="submit" class="btn btn-primary btn-lg">ðŸ’¾ Save Profile Changes</button>
            </form>
        </div>
    </div>
</div>